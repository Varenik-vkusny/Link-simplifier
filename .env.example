# PostgreSQL DATABASE SETTINGS 
# URL для подключения к базе данных. Для Docker используйте 'db' как хост.
DATABASE_URL=postgresql+asyncpg://user:password@db:5432/link_db

# REDIS SETTINGS
# URL для подключения к Redis. Для Docker используйте 'redis' как хост.
# /0 - это номер базы данных по умолчанию.
REDIS_URL=redis://redis:6379/0

# JWT AUTHENTICATION SETTINGS 
# Секретный ключ для подписи JWT-токенов.
# ВАЖНО: Сгенерируйте свой собственный ключ! Можно использовать команду:
# openssl rand -hex 32
SECRET_KEY=your_super_secret_key_here

# Алгоритм подписи токенов. HS256 - стандартный выбор.
ALGORITHM=HS256

# Время жизни токена доступа в минутах.
ACCESS_TOKEN_EXPIRE_MINUTES=30

# TELEGRAM BOT SETTINGS
# Токен для вашего Telegram-бота, полученный от @BotFather.
BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11

# APPLICATION SETTINGS
# Базовый URL, который будет использоваться для построения коротких ссылок.
# Для локальной разработки:
BASE_URL=http://localhost:8000/

# URL для внутренних API-запросов от бота к бэкенду.
# В Docker-сети используйте имя сервиса 'web'.
API_BASE_URL=http://web:8000