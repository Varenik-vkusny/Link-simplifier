# === Настройки базы данных (для docker-compose) ===
# Имя пользователя, пароль, хост (имя сервиса), порт и имя БД
DATABASE_URL=postgresql+asyncpg://user:password@db:5432/dbname

# === Настройки JWT-аутентификации ===
# Секретный ключ для подписи токенов.
# ВАЖНО: Сгенерируйте свой собственный ключ!
# Можно использовать команду: openssl rand -hex 32
SECRET_KEY=your_super_secret_key_here

# Алгоритм подписи токенов
ALGORITHM=HS256

# Время жизни access-токена в минутах
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === Настройки Telegram-бота ===
# Токен, полученный от @BotFather
BOT_TOKEN=123456:ABC-DEF1234567890

# === Настройки URL-адресов сервиса ===
# Внутренний базовый URL для коммуникации между сервисами внутри Docker
API_BASE_URL=http://web:8000

# Внешний (публичный) базовый URL, который будет видеть конечный пользователь
BASE_URL=http://localhost:8000

# === Системные флаги ===
IS_IN_DOCKER=1